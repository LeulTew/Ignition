generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Goal {
  id          String   @id @default(cuid())
  original    String   // The vague goal
  complexity  Int      // 1-10
  steps       Json     // Array of 5 strings
  createdAt   DateTime @default(now())
  
  @@index([createdAt])
}
